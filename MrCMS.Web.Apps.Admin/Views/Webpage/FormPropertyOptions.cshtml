@using System.Linq
@model MrCMS.Entities.Documents.Web.FormProperties.FormPropertyWithOptions

@if (Model.Options.Any())
{
    <table class="table table-condensed table-striped table-bordered">
        <thead>
            <tr>
                <th>@Html.Resource("Value")</th>
                <th>@Html.Resource("Admin Webpage Form Option Selected", "Selected")</th>
                <th>@Html.Resource("Actions")</th>
            </tr>
        </thead>
        <tbody>

            @foreach (var option in Model.Options)
            {
                <tr>
                    <td>@option.Value</td>
                    <td>@option.Selected</td>
                    <td>
                        <div class="btn-group">
                            @Html.ActionLink(Html.Resource("Edit"), "EditOption", "Form", new { id = option.Id }, new { @class = "btn btn-xs btn-default", data_toggle = "fb-modal" })
                            @Html.ActionLink(Html.Resource("Delete"), "DeleteOption", "Form", new { id = option.Id }, new { @class = "btn btn-xs btn-danger", data_toggle = "fb-modal" })
                        </div>
                    </td>
                </tr>
            }

        </tbody>
    </table>
}
else
{
    @Html.Resource("Admin Webpage From Options None", "Please click add option to add your first option to this field.")
}
<br />
<div class="btn-group">
    @Html.ActionLink("Add Option", "AddOption", "Form", new { id = Model.Id }, new { @class = "btn btn-xs btn-primary", data_toggle = "fb-modal" })
</div>


