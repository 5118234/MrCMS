@model MrCMS.Logging.Log
@{
    ViewBag.Title = "View Log #" + Model.Id;
}

<h1 class="page-header">
    @Html.Resource("Admin Logs Log Title", "Log") #@Model.Id
    <span class="btn-group  display-inline  pull-right">
        @Html.ActionLink("Back to list", "Index", null, new { @class = "btn btn-default" })
        <a href="@Url.Action("DeleteLog", "Log", new { Model.Id })" class="btn btn-danger" data-toggle="fb-modal">@Html.Resource("Delete")</a>
    </span>
</h1>
<table class="table table-striped table-condensed">
    <tbody>
        <tr>
            <td class="col-lg-2">
                @Html.Resource("Type")
            </td>
            <td class="col-lg-10">
                @Model.Type
            </td>
        </tr>
        <tr>
            <td>
                @Html.Resource("Created on")
            </td>
            <td>
                @Model.CreatedOn
            </td>
        </tr>
        <tr>
            <td>
                @Html.Resource("Site")
            </td>
            <td>
                @Model.SiteName
            </td>
        </tr>
        <tr>
            <td>
                @Html.Resource("Message")
            </td>
            <td>
                @Model.Message
            </td>
        </tr>
        <tr>
            <td>
                @Html.Resource("Detail")
            </td>
            <td>
                @Html.Raw(Model.DetailFormatted)
            </td>
        </tr>
    </tbody>
</table>
@if (Model.Error != null)
{
    <h4>@Html.Resource("Admin Logs Server Variables", "Server Variables")</h4>
    <div style="overflow: scroll">
        <table class="table table-striped table-condensed">
            <thead>
                <tr>
                    <th class="col-lg-2">
                        @Html.Resource("Key")
                    </th>
                    <th class="col-lg-10">
                        @Html.Resource("Value")
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var key in Model.Error.ServerVariables.AllKeys)
                {
                    <tr>
                        <td>
                            @key
                        </td>
                        <td>
                            @Model.Error.ServerVariables[key]
                        </td>
                    </tr>

                }
            </tbody>
        </table>
    </div>
}
