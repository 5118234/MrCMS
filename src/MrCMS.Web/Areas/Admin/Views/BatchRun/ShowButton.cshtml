@using MrCMS.Batching.Entities
@model MrCMS.Batching.Entities.BatchRun

@if (Model.Status == BatchRunStatus.Pending || Model.Status == BatchRunStatus.Paused)
{
    <button type="button" data-batch-run-start="true" data-batch-run-id="@Model.Id" class="btn btn-secondary btn-xs">Start</button>
}
else if (Model.Status == BatchRunStatus.Executing)
{
    <button type="button" data-batch-run-pause="true" data-batch-run-id="@Model.Id" class="btn btn-secondary btn-xs">Pause</button>
}