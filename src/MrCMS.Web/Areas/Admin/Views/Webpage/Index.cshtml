@using MrCMS.Helpers
@using MrCMS.Services.Resources
@{
    ViewBag.Title = "Manage Pages";
}

<admin-header>
    <row>
        <admin-header-title title="@Html.Resource("Admin Nav Pages", "Pages")" />
            
        <admin-header-actions>
        </admin-header-actions>
    </row>
</admin-header>

<card>
    <card-body>
        <div id="web">
            <div id="webpage-tree">
            </div>
        </div>
        
        <hr />
        <strong>@Html.Resource("Key"):</strong>

        <span class="text-success">@Html.Resource("Admin Webpage Index Not Included In Navigation", "Not included in site navigation")</span><br/>
        <span class="text-warning">@Html.Resource("Admin Webpage Index Not published", "Not published")</span><br/>

    </card-body>
</card>


@{ Html.IncludeScript("~/Areas/Admin/scripts/pages.js"); }