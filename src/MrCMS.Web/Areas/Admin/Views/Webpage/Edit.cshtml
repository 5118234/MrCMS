@using System
@using MrCMS.Entities.Documents.Web
@using MrCMS.Helpers
@using MrCMS.Services
@using MrCMS.Web.Apps.Admin.Models
@using MrCMS.Web.Apps.Admin.Services
@model Webpage
@inject IGetEditTabsService TabsService
@inject IGetLiveUrl GetLiveUrl
@{
    ViewBag.Title = "Edit | " + Model.Name;
    ViewData["webpage"] = Model;
    var tabs = TabsService.GetEditTabs(Html, Model);
}

<form asp-controller="Webpage" asp-action="edit" id="edit-webpage" data-are-you-sure="@Html.Resource(AdminMessages.AreYouSureDefaultMessage)" method="post">
    <section class="content-header">
        <div class="container-fluid mb-0">
            <div class="row">
                <div class="col-lg-6 col-xl-7">
                    <h1 class="text-truncate">@Model.Name</h1>
                </div>
                <div class="col-lg-6 col-xl-5">
                    <div class="input-group" id="edit-webpage-options">
                        <span class="@(Model.PublishStatus == Webpage.WebpagePublishStatus.Published ? "text-success" : "text-warning")" style="line-height: 38px;">@Html.Resource(Model.PublishStatus.ToString())&nbsp;</span>

                        <input type="input" asp-for="PublishOn" class="form-control date-time-picker"/>
                        @Html.ValidationMessageFor(x => x.PublishOn)

                        <div class="input-group-append">
                            @(Model.PublishOn == null ? Html.ActionLink(Html.Resource("Publish Now"), "PublishNow", new {id = Model.Id}, new {@class = "btn btn-warning", id = "publish-status-change"}) : Html.ActionLink(Html.Resource("Unpublish"), "Unpublish", new {id = Model.Id}, new {@class = "btn btn-success", id = "publish-status-change"}))

                            <a href="@GetLiveUrl.GetUrlSegment(Model, true)" class="btn btn-secondary">View</a>

                            @Html.ActionLink(Html.Resource("Move"), "Set", "WebpageParent", new {Model.Id}, new {data_toggle = "fb-modal", @class = "btn btn-secondary"})
                            @if (Html.CanDelete())
                            {
                                <a href="@Url.Action(Html.Resource("Delete"), "Webpage", new {id = Model.Id})" class="btn btn-danger" data-toggle="fb-modal">Delete</a>
                            }
                            <button class="btn btn-primary">@Html.Resource("Save")</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <div class="card">
        <div class="card-body">
            <ul class="nav nav-tabs" data-stickytabs="webpage-@Model.Id" role="tablist">
                @foreach (var tab in tabs)
                {
                    ViewData["is-first"] = tab == tabs.First();
                    <partial name="Tab" model="tab" view-data="ViewData"/>
                }
            </ul>
            <div class="tab-content mt-3">
                @foreach (var tab in tabs)
                {
                    ViewData["is-first"] = tab == tabs.First();
                    <partial name="TabContent" model="tab" view-data="ViewData"/>
                }
            </div>
        </div>
    </div>
</form>

@{
    Html.IncludeScript("~/Areas/Admin/scripts/edit-webpage.js");
}