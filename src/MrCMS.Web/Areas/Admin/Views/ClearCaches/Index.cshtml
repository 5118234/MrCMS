@model dynamic

@{
    ViewBag.Title = "Clear Caches";
    var cleared = ViewData["cleared"] is bool && (bool) ViewData["cleared"];
}
<form method="post">

    <admin-header>
        <row>
            <admin-header-title title="@Html.Resource("Admin Clear Caches", "Clear Caches")"/>

            <admin-header-actions>
                <input type="submit" class="btn btn-primary" value="@Html.Resource("admin-clear", "Clear")"/>
            </admin-header-actions>
        </row>
    </admin-header>

    <card>
        <card-body>
            <div class="row">
                <div class="col-lg-12">
                    @Html.Resource("admin-clear-caches-info", "Click 'clear' to clear database cache").
                    @if (cleared)
                    {
                        <div class="alert alert-success">
                            @Html.Resource("admin-clear-caches-success", "Caches successfully cleared").
                        </div>
                    }
                </div>
            </div>
        </card-body>
    </card>

</form>