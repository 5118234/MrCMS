@using System.Linq
@using MrCMS.Web.Apps.Admin.Services
@model MrCMS.Web.Apps.Admin.Models.UpdateSiteModel
@inject ISiteAdminService AdminService
@{
    var redirectedDomains = AdminService.GetRedirectedDomains(Model.Id);
}
<div id="restricted-domains">
    <hr />
    <div class="pull-right">
        @Html.ActionLink("Add", "Add", "RedirectedDomain", new { id = Model.Id }, new { @class = "btn btn-secondary btn-xs", data_toggle = "fb-modal" })
    </div>
    <h4>@Html.Resource("Admin Redirected Domains", "Redirected Domains")</h4>
    @if (redirectedDomains.Any())
    {
        <table class="table table-striped table-condensed">
            <thead>
                <tr>
                    <th>Url
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var domain in redirectedDomains)
                {
                    <tr>
                        <td>@domain.Url</td>
                        <td>@Html.ActionLink("Remove", "Delete", "RedirectedDomain", new {id = domain.Id}, new {@class = "btn btn-danger btn-xs", data_toggle = "fb-modal"})</td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>@Html.Resource("Admin Redirected Domains None", "There are currently no redirected domains for this site")</p>
    }
</div>
