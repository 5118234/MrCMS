@using MrCMS.Settings
@model System.Collections.Generic.List<MrCMS.Entities.Multisite.Site>
@{
    ViewBag.Title = "Sites";
}

<h1 class="page-header">
    @Html.Resource("Admin Multi-site setup", "Multi-site setup")
    <span class="btn-group pull-right">
        @Html.ActionLink("Add", "Add", "Sites", null, new { @class = "btn btn-primary" })
    </span>
</h1>

<table class="table table-striped table-condensed">
    <tr>
        <th>
            @Html.Resource("Name")
        </th>
        <th>
            Url
        </th>
        <th>
            @Html.Resource("Created On")
        </th>
        <th>
            @Html.Resource("Actions")
        </th>
    </tr>
    @foreach (var site in Model)
    {
        <tr>
            <td>
                @Html.ActionLink(site.Name, "Edit", new { id = site.Id })
            </td>
            <td>
                @site.BaseUrl
            </td>
            <td>
                @site.CreatedOn
            </td>
            <td>
                @Html.ActionLink(Html.Resource("Delete"), "Delete", new { id = site.Id }, new { @class = "btn btn-danger btn-sm", data_toggle = "fb-modal" })
            </td>
        </tr>
    }
</table>