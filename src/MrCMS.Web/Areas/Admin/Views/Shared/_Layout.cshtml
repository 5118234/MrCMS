@using MrCMS.Apps
@using MrCMS.Helpers
@using MrCMS.Website
@{
    Layout = "~/Areas/Admin/Views/Shared/_LayoutRoot.cshtml";
}

<div class="wrapper">

    <partial name="Navbar"/>

    <aside class="main-sidebar sidebar-light-primary elevation-4" id="sidebar">
        <partial name="Sidebar"/>
    </aside>

    <div id="content" class="content-wrapper">

        <partial name="Messages"/>

        <div class="content">
            @RenderBody()
        </div>

    </div>
    
    <footer class="main-footer">
        <!-- To the right -->
        <div class="float-right d-none d-sm-block-down">
            Anything you want
        </div>
        <!-- Default to the left -->
        <strong>Copyright &copy; 2018 <a href="https://adminlte.io">AdminLTE.io</a>.</strong> All rights reserved.
    </footer>

    
</div>

@if (IsSectionDefined("JavaScriptBlock"))
{
    DefineSection("JavaScriptBlock", () =>
    {
        Write(RenderSection("JavaScriptBlock"));
        return Task.CompletedTask;
    });
}