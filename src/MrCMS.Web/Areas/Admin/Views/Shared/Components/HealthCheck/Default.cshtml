@using MrCMS.Helpers
@model System.Collections.Generic.List<MrCMS.HealthChecks.IHealthCheck>
<div class="card">
<div class="card-body">
        <h4>@Html.Resource("Admin Health Checks Title", "Health checks")</h4>
        <table class="table table-striped table-condensed" style="overflow: scroll" data-health-check-list="true">
            <thead>
                <tr>
                    <th>@Html.Resource("Status")</th>
                    <th>@Html.Resource("Description")</th>
                    <th>@Html.Resource("Messages")</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var healthCheck in Model)
                {
                    <tr data-process-url="@Url.Action("Process", "HealthCheck", new { typeName = healthCheck.TypeName })">
                        <td data-status="true" class="text-center"><i class="fa fa-refresh"></i></td>
                        <td>@healthCheck.DisplayName</td>
                        <td data-messages="true">
                        <td>
                    </tr>
                }
            </tbody>
        </table>
        @{ Html.IncludeScript("~/Areas/Admin/scripts/health-checks.js");}

</div>    </div>