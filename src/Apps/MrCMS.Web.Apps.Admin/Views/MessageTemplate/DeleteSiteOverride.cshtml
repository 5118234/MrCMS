@using MrCMS.Helpers
@model MrCMS.Messages.MessageTemplate
@{ Layout = "~/Areas/Admin/Views/Shared/_LayoutPopup.cshtml";}
@using (Html.BeginForm("DeleteSiteOverride", "MessageTemplate", new { type = Model.GetType().FullName }, FormMethod.Post))
{

    <h1 class="page-header">
        @Html.Resource("Delete Site Override")
        <span class="btn-group  d-inline  pull-right">
            <input type="submit" class="btn btn-danger" value="@Html.Resource("Delete")" />
        </span>
    </h1>

    @Html.InfoBlock(Html.Resource("Warning"), Html.Resource("Admin Message Template Site Override Delete Warning", "Are you sure you want to delete this message template override? This action cannot be undone"), AlertType.danger)
}

