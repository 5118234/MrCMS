@using MrCMS.Helpers
@model MrCMS.Logging.Log
@{ Layout = "~/Areas/Admin/Views/Shared/_LayoutPopup.cshtml";}
@using (Html.BeginForm("DeleteLog", "Log", new { id = Model.Id }, FormMethod.Post, new { style = "display:inline;" }))
{
    <fieldset>
        <legend>@Html.Resource("Admin Logs Delete Title", "Delete log")
                <span class="btn-group pull-right">
                    <input type="submit" class="btn btn-danger" value="@Html.Resource("Delete")"/>
                </span>
        </legend>
        @Html.InfoBlock(Resource("Heads up") + "!", Resource("Admin Delete Info Warning", "Deleting this cannot be undone."), AlertType.danger)
    </fieldset>
}
