@using MrCMS.Helpers
@{ Layout = "~/Areas/Admin/Views/Shared/_LayoutPopup.cshtml";}
@using (Html.BeginForm("Delete", "Log", FormMethod.Post, new { style = "display:inline;" }))
{
    <fieldset>
        <legend>@Html.Resource("Admin Logs Delete All Title", "Delete all logs")
                <span class="btn-group  display-inline  pull-right">
                    <input type="submit" class="btn btn-danger" value="@Html.Resource("Delete")" />
                </span>
        </legend>
        @Html.InfoBlock(Resource("Heads up") + "!", Resource("Admin Delete Info Warning", "Deleting this cannot be undone."), AlertType.danger)
    </fieldset>
}
