@model MrCMS.Website.WidgetDisplayInfo

<div data-layout-area-id="@Model.Id" data-layout-area-name="@Model.Name" data-layout-area-hascustomsort="@Model.HasCustomSort" class="layout-area">
    @foreach (var widget in Model.Widgets)
    {
        @await Component.InvokeAsync("Widget", new { widget.Id, editable = true })
    }
</div>